{
  "manifest_version": 3,
  "name": "Zotero Connector for NotebookLM",
  "version": "1.1",
  "permissions": [
    "activeTab",
    "scripting",
    "debugger",
    "storage",
    "alarms",
    "history"
  ],
  "host_permissions": [
    "http://localhost:23119/*",
    "https://notebooklm.google.com/*",
    "https://extensionpay.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Sync Zotero to NotebookLM"
  },
  "content_scripts": [
    {
      "matches": ["https://notebooklm.google.com/*"],
      "js": ["content.js"]
    },
    {
      "matches": ["https://extensionpay.com/*"],
      "js": ["ExtPay.js"],
      "run_at": "document_start"
    }
  ]
}
